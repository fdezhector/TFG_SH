<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".toDoList.UpdateTareaActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/button_cerrar"
        app:tint="@color/gris"
        android:scaleY="0.75"
        android:scaleX="0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:contentDescription="@string/cerrar"
        app:srcCompat="@drawable/close_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif"
            android:text="Actualizar"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:textSize="40sp"/>

        <EditText
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TÃ­tulo..."
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:background="@drawable/custom_edit_text"

            android:maxLength="25"
            android:textColorHint="@color/gris"
            android:textColor="@color/gris"/>

        <Spinner
            android:id="@+id/prioridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:textColor="@color/gris"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:backgroundTint="@color/gris"
            style="@style/custom_spinner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="250dp">

            <Button
                android:id="@+id/delete_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="15dp"
                android:backgroundTint="@color/negro"
                android:text="Borrar"
                android:textColor="@color/gris"/>

            <Button
                android:id="@+id/update_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="15dp"

                android:backgroundTint="@color/negro"
                android:text="Actualizar"
                android:textColor="@color/gris"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>