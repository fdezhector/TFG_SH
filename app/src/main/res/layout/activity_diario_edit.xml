<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".diario.DiarioActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_cerrar"
            android:onClick="goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:contentDescription="@string/cerrar"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageButton
            android:id="@+id/button_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:contentDescription="@string/guardar"
            app:srcCompat="@android:drawable/ic_menu_save" />

        <ImageButton
            android:id="@+id/button_borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/button_guardar"
            android:background="@color/transparent"
            android:contentDescription="@string/borrar_dia"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideHor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideHor1">

        <TextView
            android:id="@+id/dayColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Color del dÃ­a:"
            android:textSize="13sp"
            android:textColor="@color/gris"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/layoutEmotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/dayColor">

            <ImageButton
                android:id="@+id/color1"
                android:scaleType="center"
                android:background="@color/transparent"
                app:tint="@color/purple_depressed"
                android:tintMode="multiply"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

            <ImageButton
                android:id="@+id/color2"
                android:scaleType="center"
                android:background="@color/transparent"
                app:tint="@color/purple_sad"
                android:tintMode="multiply"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

            <ImageButton
                android:id="@+id/color3"
                android:scaleType="center"
                android:background="@color/transparent"
                app:tint="@color/blue_neutral"
                android:tintMode="multiply"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

            <ImageButton
                android:id="@+id/color4"
                android:scaleType="center"
                android:background="@color/transparent"
                app:tint="@color/green_joy"
                android:tintMode="multiply"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

            <ImageButton
                android:id="@+id/color5"
                android:scaleType="center"
                android:background="@color/transparent"
                app:tint="@color/green_super"
                android:tintMode="multiply"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRecycler"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutEmotes">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emotionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                tools:listitem="@layout/item_emotion" />
        </LinearLayout>

        <EditText
            android:id="@+id/descripcionDiario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:layout_below="@id/linearLayoutRecycler"

            android:background="@drawable/custom_multiline_edit_text"

            android:inputType="textMultiLine"
            android:textColor="@color/gris"
            android:hint="Cambiar un poco esto / imagenes botones"
            android:textColorHint="@color/hintColor"
            />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>