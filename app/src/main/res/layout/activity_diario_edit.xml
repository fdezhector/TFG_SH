<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diarioEditLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".diario.DiarioActivity"
    android:isScrollContainer="true"
    android:overScrollMode="ifContentScrolls">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/isColorSelected"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/transparent"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_cerrar"
            app:tint="?attr/tint"
            android:scaleY="0.75"
            android:scaleX="0.75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:contentDescription="@string/cerrar"
            app:srcCompat="@drawable/close_icon" />

        <ImageButton
            android:id="@+id/button_guardar"
            app:tint="?attr/tint"
            android:scaleY="0.75"
            android:scaleX="0.75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:contentDescription="@string/guardar"
            android:minWidth="40dp"
            android:minHeight="40dp"
            app:srcCompat="@drawable/save_icon" />

        <ImageButton
            android:id="@+id/button_borrar"
            app:tint="?attr/tint"
            android:scaleY="0.75"
            android:scaleX="0.75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/button_guardar"
            android:background="@color/transparent"
            android:contentDescription="@string/borrar_dia"
            android:minWidth="40dp"
            android:minHeight="40dp"
            app:srcCompat="@drawable/delete_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideHor1">

        <TextView
            android:id="@+id/dayColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Color del día:"
            android:textColor="?attr/tint"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/layoutEmotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayColor"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/color1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:tintMode="src_in"
                app:srcCompat="@drawable/depressed_mood"
                app:tint="@color/hintColor"/>

            <ImageButton
                android:id="@+id/color2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:tintMode="src_in"
                app:srcCompat="@drawable/sad_mood"
                app:tint="@color/hintColor"/>

            <ImageButton
                android:id="@+id/color3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:tintMode="src_in"
                app:srcCompat="@drawable/neutral_mood"
                app:tint="@color/hintColor"/>

            <ImageButton
                android:id="@+id/color4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:tintMode="src_in"
                app:srcCompat="@drawable/joy_mood"
                app:tint="@color/hintColor"/>

            <ImageButton
                android:id="@+id/color5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:tintMode="src_in"
                app:srcCompat="@drawable/joy_mood"
                app:tint="@color/hintColor"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutEmotes"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edit_text"
            android:orientation="vertical"
            android:elevation="10dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:text="Emociones"
                    android:textColor="?attr/textFillColor"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/deselect_emotions_button"
                    app:tint="?attr/tint"
                    android:scaleY="0.75"
                    android:scaleX="0.75"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/done_edit_emotions_button"
                    android:src="@drawable/deselect_icon"
                    android:background="@color/transparent"/>

                <ImageButton
                    android:id="@+id/done_edit_emotions_button"
                    app:tint="?attr/tint"
                    android:scaleY="0.75"
                    android:scaleX="0.75"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/done_icon"
                    android:background="@color/transparent"/>

                <ImageButton
                    android:id="@+id/edit_emotions_button"
                    app:tint="?attr/tint"
                    android:scaleY="0.65"
                    android:scaleX="0.65"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit_icon"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/emotionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                tools:listitem="@layout/item_emotion"
                android:layout_margin="5dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewEmociones"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:hint="Selecciona las emociones que hayas sentido..."
                    android:textColorHint="?attr/hintTextColor"
                    android:textSize="14sp"
                    android:textStyle="italic"/>
            </ScrollView>
        </LinearLayout>

        <EditText
            android:id="@+id/descripcionDiario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_below="@id/linearLayoutRecycler"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="@drawable/custom_edit_text"
            android:hint="Escribe cómo te has sentido hoy..."
            android:textColorHint="?attr/hintTextColor"
            android:inputType="textMultiLine"
            android:overScrollMode="ifContentScrolls"
            android:textSize="14dp" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideHor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.15"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>