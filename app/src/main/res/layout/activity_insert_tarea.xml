<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".toDoList.InsertTareaActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background" >

    <ImageButton
        android:id="@+id/button_cerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:contentDescription="@string/cerrar"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Crear"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:textSize="40sp"/>

        <EditText
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:background="@drawable/custom_edit_text"
            android:maxLength="25"
            android:hint="TÃ­tulo..."
            android:textColorHint="#BFBBBB"
            android:textColor="@color/gris"/>
        <!-- TODO mirar que se pueda establecer un color de fondo a la flecha del dropdown-->
        <Spinner
            android:id="@+id/prioridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:textColor="@color/gris"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            style="@style/custom_spinner"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:paddingHorizontal="75dp"

            android:backgroundTint="@color/negro"
            android:text="Guardar"
            android:textColor="@color/gris"/>

    </LinearLayout>
</RelativeLayout>

