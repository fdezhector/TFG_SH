<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/layout_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="20dp"
        android:layout_above="@id/layout_importar"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp"
        android:background="@color/negro">

        <ImageView
            android:id="@+id/info_icon"
            app:tint="@color/gris"
            android:scaleY="0.75"
            android:scaleX="0.75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"

            android:src="@drawable/info_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/info_icon"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.15"
            android:text="Acerca de BetterYou"
            android:textAllCaps="true"
            android:textColor="@color/gris"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_importar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="20dp"
        android:layout_above="@id/layout_exportar"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp"
        android:background="@color/negro">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"

            android:src="@drawable/import_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.15"
            android:text="Importar BetterYou (JSON)"
            android:textAllCaps="true"
            android:textColor="@color/gris"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_exportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="20dp"
        android:layout_above="@id/horizontal_guideline"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp"
        android:background="@color/negro">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/export_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exportar BetterYou (JSON)"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"

            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/gris"
            android:textAllCaps="true"
            android:letterSpacing="0.15"/>
    </RelativeLayout>

    <View
        android:id="@+id/horizontal_guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_guideline"
        android:layout_centerHorizontal="true"
        android:text="Escoge una hora para recibir la notificaciÃ³n del diario:"
        android:textSize="14sp"
        android:textColor="@color/gris"
        android:fontFamily="sans-serif"/>

    <Spinner
        android:id="@+id/hora_notificacion_diario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        android:textColor="@color/gris"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        style="@style/custom_spinner"/>

    <include android:id="@+id/bottom_nav" layout="@layout/bottom_nav"/>

</RelativeLayout>