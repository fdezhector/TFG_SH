<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/edit_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:background="@color/prioridad_baja_2"
        android:src="@drawable/edit_icon"/>

    <View
        android:id="@+id/border_color_prioridad"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@color/prioridad_media_1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_tarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:elevation="20dp">

        <LinearLayout
            android:id="@+id/layoutTarea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la tarea"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="?attr/textFillColor"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/recycler_prioridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Prioridad"
                android:textColor="?attr/textFillColor"
                android:textStyle="italic"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>