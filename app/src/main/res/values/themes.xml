<resources>
    <!-- Base application theme. -->
    <style name="Theme.TFG_SH" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="background">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorContainer">@color/colorContainer</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="colorSurface">@color/background</item>
        <item name="textFillColor">@color/negro</item>
        <item name="tint">@color/negro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="navigationIconTint">@color/negro</item>
        <item name="navigationIcon">@color/primaryDark</item>
        <item name="android:navigationBarColor">@color/secondary</item>
        <item name="hintTextColor">@color/dark_grey</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- CalendarView -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorContainer</item>
        <item name="textFillColor">@color/primaryDark</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:colorActivatedHighlight">@color/primaryDark</item>
        <item name="android:weekNumberColor">@color/secondary</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <!-- Separator -->
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <!-- FAB -->
    <style name="ShapeAppearanceOverlay.MyApp.FabCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Spinner -->
    <style name="custom_spinner">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:dropDownVerticalOffset">50dp</item>
    </style>

    <!-- TimePicker -->
    <style name="TimePicker" parent="android:Theme.Material.Light.Dialog">
        <item name="android:background">@color/background</item>
        <item name="android:colorAccent">@color/background</item>
        <item name="android:colorControlActivated">@color/background</item>
        <item name="android:colorControlNormal">@color/negro</item>
        <item name="android:textColorPrimary">@color/negro</item>
        <item name="android:textColorSecondary">@color/negro</item>
        <item name="android:colorControlHighlight">@color/focused</item>
    </style>

</resources>